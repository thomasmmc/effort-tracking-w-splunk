  <div class="container main-content">

<center><h1><font color="#B31B1B">Enter new initiative information</center></h1><br>
<hr>
<%= form_for @initiative do |f| -%>
  Inititative Name <%= f.text_field :name, :placeholder => 'Deploy <X> Project' %> <p></p>
  Reference Number <%= f.text_field :ref, :placeholder => 'SN project or fund' %> <p></p>
  <%= f.submit %>
<% end -%>

<center><h1><font color="#B31B1B">All existing inititative information</center></h1><br>
<hr>

<% if !@initiatives.blank? %>
  <% for item in @initiatives %>
  <b>  <%= item.name %>:</b> <%= item.ref %> <br />
  <% end %>
<% else %>

<% end  %>
